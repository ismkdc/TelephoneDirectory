FROM mcr.microsoft.com/dotnet/runtime:7.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["TelephoneDirectory.ReportConsumer/TelephoneDirectory.ReportConsumer.csproj", "TelephoneDirectory.ReportConsumer/"]
RUN dotnet restore "TelephoneDirectory.ReportConsumer/TelephoneDirectory.ReportConsumer.csproj"
COPY . .
WORKDIR "/src/TelephoneDirectory.ReportConsumer"
RUN dotnet build "TelephoneDirectory.ReportConsumer.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "TelephoneDirectory.ReportConsumer.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TelephoneDirectory.ReportConsumer.dll"]
